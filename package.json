{
  "name": "vite-plugin-adoc",
  "private": true,
  "version": "1.0.0",
  "author": "Kirill Romanov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Djaler/vite-plugin-adoc"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && tsc -p tsconfig.build.json && copyfiles -u 1 \"src/html/runtime/**\" dist",
    "publish": "npm run build && clean-publish"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "packageManager": "pnpm@6.20.3",
  "dependencies": {
    "asciidoctor": "^2.2.5",
    "html-loader": "3.0.1"
  },
  "bundledDependencies": [
    "html-loader"
  ],
  "peerDependencies": {
    "vite": "^2.0.0"
  },
  "devDependencies": {
    "@djaler/eslint-config-typescript": "0.0.7",
    "@types/node": "16.11.6",
    "clean-publish": "3.4.3",
    "copyfiles": "2.4.1",
    "eslint": "8.2.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "lint-staged": "11.2.6",
    "rimraf": "3.0.2",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.4.4",
    "vite": "2.6.13"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  }
}
